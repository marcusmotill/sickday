<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logohq"
        android:layout_below="@+id/splashlogowords"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/splashlogowords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:src="@drawable/sickday_logo_words" />

    <msqrd.sickday.AutoResizeTextView
        android:id="@+id/tvWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#bdc3c7"
        android:gravity="center"
        android:maxLines="3"
        android:text="@string/home_fragment_warning"
        android:textColor="@color/sickday_red"
        android:textSize="40dp" />

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvWarning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvSickInCity"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sick_in_city"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvMedicalHouseCalls"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_house_calls"
            android:layout_below="@id/tvSickInCity"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_margin="10dp"
            android:layout_below="@+id/tvMedicalHouseCalls"
            android:id="@+id/imHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home_address_icon"/>

        <ImageView
            android:layout_margin="10dp"
            android:layout_below="@+id/tvMedicalHouseCalls"
            android:id="@+id/imOffice"
            android:layout_toRightOf="@+id/imHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/office_icon"/>

        <TextView
            android:id="@+id/tvHomeOfficeHotel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_office_hotel"
            android:layout_alignBottom="@+id/imOffice"
            android:layout_toRightOf="@+id/imOffice"
            android:layout_toEndOf="@+id/imOffice" />
    </RelativeLayout>


</RelativeLayout>