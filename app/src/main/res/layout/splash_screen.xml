<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/splashFooter"
        android:scaleType="fitEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/splashscreen_footer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sickday_logo_small"
        android:layout_below="@+id/splashlogowords"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/splashlogowords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sickday_logo_words"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <msqrd.sickday.AutoResizeTextView
        android:layout_margin="5dp"
        android:id="@+id/tvWarning"
        android:textColor="@color/sickday_red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_fragment_warning"
        android:maxLines="3"
        android:textSize="40dp"
        android:layout_alignTop="@+id/splashFooter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>