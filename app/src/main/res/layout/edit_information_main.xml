<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <msqrd.sickday.CustomViewPager
        android:id="@+id/profileEditPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bEditInsurance" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bEditProfile"
        android:text="@string/edit_profile"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sickday_blue"/>

    <Button
        android:layout_above="@+id/bEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_view_insurance"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white"
        android:background="@color/sickday_blue"
        android:id="@+id/bEditInsurance" />


</RelativeLayout>